# vim: ft=jinja

{% import_yaml 'consul/defaults.yml' as default_settings %}

{% set os_family_map = salt['grains.filter_by']({
        'Debian': {},
        'Suse': {},
        'Arch': {},
        'RedHat': {},
  }
  , grain="os_family"
  , merge=salt['pillar.get']('consul:lookup'))
%}

{# Merge the flavor_map to the default settings #}
{% do default_settings.consul.update(os_family_map) %}

{# Merge in template:lookup pillar #}
{% set consul = salt['pillar.get'](
        'consul',
        default=default_settings.consul,
        merge=True
    )
%}
